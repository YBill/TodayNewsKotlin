<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bill.todaynews_kotlin.ui.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_bg">

        <RelativeLayout
            android:id="@+id/rl_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_home_tab_bar_selector" />

            <TextView
                android:id="@+id/tv_tab_home"
                style="@style/home_tab_text"
                android:layout_below="@id/iv_tab_home"
                android:text="首页" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tab_video"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_video_tab_bar_selector" />

            <TextView
                android:id="@+id/tv_tab_video"
                style="@style/home_tab_text"
                android:layout_below="@id/iv_tab_video"
                android:text="视频" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tab_attention"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_attention_tab_bar_selector" />

            <TextView
                android:id="@+id/tv_tab_attention"
                style="@style/home_tab_text"
                android:layout_below="@id/iv_tab_attention"
                android:text="关注" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tab_mine"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_mine_un_login_tab_bar_selector" />

            <TextView
                android:id="@+id/tv_tab_mine"
                style="@style/home_tab_text"
                android:layout_below="@id/iv_tab_mine"
                android:text="未登录" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
